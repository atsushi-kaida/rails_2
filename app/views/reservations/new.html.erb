<div class="reservation-form form-area">
  <h2>予約内容確認</h2>
  <%= form_with model: @reservation, url:reservations_path, data:{turbo: false} do |f| %>
    <h5>¥ <%= @room.price %> /日 </h5>
    <div>
      <%= f.label :start_day, "開始日", class: "reservation-label" %>
      <%= f.date_field :start_day, class:"form-control", value: @reservation.start_day.to_date, readonly: :true %>
    </div>
    <div>
      <%= f.label :end_day, "終了日", class: "reservation-label" %>
      <%= f.date_field :end_day, class:"form-control", value: @reservation.end_day.to_date, readonly: :true %>
    </div>
    <div>
      <p>使用日数：<%= @total_day %>日</p>
    </div>
    <div>
      <p>人数：<%= @reservation.people_count %>人</p>
    </div>
    <div>
      <%= f.label "合計金額", class: "reservation-label" %>
      <%= f.text_field :total_price, class:"form-control", value: (@reservation.people_count.to_i * @room.price * @total_day), readonly: :true%>
    <p>上記でよろしければ「予約を確定」を押してください</p>
    </div>
    <%= f.hidden_field :room_id, value: @reservation.room_id %>
    <%= f.hidden_field :people_count, value: @reservation.people_count %>
    <div>
      <%= f.submit "予約を確定", class:"btn-primary wide-btn"%>
    </div>
    <%= link_to "ルーム詳細に戻る", room_path(@room.id), class: "btn btn-secondary wide-btn" %>
  <%end%>
</div>