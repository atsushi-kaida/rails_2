<div class="container">
  <h1>予約済みルーム一覧</h1>
  <table>
    <thead>
      <tr>
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>料金</th>
        <th>登録日</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
      <tr>
        <td><%= image_tag "room_images/#{room.image_name}", class: "reservation-index-image", alt: "部屋画像" %>
        </td>
        <td><%= link_to room.name, room_path(room.id) %></td>
        <td><%= room.intro %></td>
        <td>
          ¥<%= room.price %>
        </td>
        <td><%= room.created_at.to_date %></td>
      </tr>
      <%end%>
    </tbody>
  </table>
</div>