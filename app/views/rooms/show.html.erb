<div class="container room-show-container">

  <div class="room-show">
    <%= image_tag "room_images/#{@room.image_name}", class: "room-image", alt: "部屋画像"%>
    <div class="room-show-detail">
      <%= image_tag "user_images/#{@owner.profile.icon_name}", class: "owner-icon"%>
      <div class="room-show-profile">
        <h2><%= @room.name %></h2>
        <p> <%= @room.place%> </p>
      </div>
    </div>
    <div class="room-show-intro">
      <%=@room.intro%>
    </div>
  </div>

  <div class="reservation-form">
    <%= render "shared/error", obj: @reservation %>
    <%= form_with model: @reservation, url: new_reservation_path, method: :get, data:{turbo: false} do |f| %>
      <h5>¥ <%= @room.price %> /日 </h5>
      <div>
        <%= f.label :start_day, "開始日", class: "reservation-label" %>
        <%= f.date_field :start_day, autofocus: true, class:"form-control" %>
      </div>
      <div>
        <%= f.label :end_day, "終了日", class: "reservation-label" %>
        <%= f.date_field :end_day, class:"form-control" %>
      </div>
      <div>
        <%= f.label :people_count, "人数", class: "reservation-label" %>
        <%= f.number_field :people_count, class:"form-control"%>
      </div>
      <%= f.hidden_field :room_id, value: @room.id %>
      <div>
        <%= f.submit "予約する", class:"btn-primary wide-btn"%>
      </div>
    <%end%>
  </div>
</div>