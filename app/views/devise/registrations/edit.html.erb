<div class="form-area">
  <h2>アカウント編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password ,"変更後パスワード（変更する場合のみ入力）"%></i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <em>最低 <%= @minimum_password_length %> 文字必要</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード確認用（変更する場合のみ入力）" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password, "(現在のパスワード)" %>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "更新", class: "btn-primary" %>
    </div>
  <% end %>

  <%= link_to "戻る", :back, class: "btn-secondary"%>
</div>