<div class="setting-page">
  <%= render "shared/setting_menu_bar" %>
  <div class="form-area-wrapper">
    <div class="form-area">
      <div class="separated-field">
        <h2>プロフィール</h2>
      </div>

      <div class="separated-field">
        <%= image_tag "user_images/#{current_user.profile.icon_name}", class:"host-icon" %>
      </div>
      <%= form_with url: users_profile_path, data:{turbo: false} do |f| %>
      <div class="separated-field">
        <%= f.label :user_image, "アイコン画像", class: "form-label" %>
        <%= f.file_field :user_image, accept: "image/jpg,image/jpeg,image/png,image/gif" %>
      </div>
      <div class="separated-field">
        <%= f.label :name, "名前", class: "form-label" %>
        <%= f.text_field :name, value: @profile.name %>
      </div>
      <div class="separated-field">
        <%= f.label :user_intro, "自己紹介", class: "form-label" %>
        <%= f.text_area :user_intro, rows: "5", value: @profile.user_intro %>
      </div>
      <div>
        <%= f.submit "更新", class: "btn btn-primary" %>
      </div>
      <%end%>
  </div>
</div>